<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.octest.servlets.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Devices</servlet-name>
        <servlet-class>com.octest.servlets.Devices</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Devices</servlet-name>
        <url-pattern>/device</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteDevice</servlet-name>
        <servlet-class>com.octest.servlets.DeleteDevice</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteDevice</servlet-name>
        <url-pattern>/deleteDevice</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DevicesList</servlet-name>
        <servlet-class>com.octest.servlets.DevicesList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DevicesList</servlet-name>
        <url-pattern>/devicesList</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Employees</servlet-name>
        <servlet-class>com.octest.servlets.Employees</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Employees</servlet-name>
        <url-pattern>/employee</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteEmploye</servlet-name>
        <servlet-class>com.octest.servlets.DeleteEmploye</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteEmploye</servlet-name>
        <url-pattern>/employee/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EmployeesList</servlet-name>
        <servlet-class>com.octest.servlets.EmployeesList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeesList</servlet-name>
        <url-pattern>/employeesList</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Dashboard</servlet-name>
        <servlet-class>com.octest.servlets.Dashboard</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Dashboard</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Test</servlet-name>
        <servlet-class>com.octest.servlets.Test</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Connexion</servlet-name>
        <servlet-class>com.octest.servlets.Connexion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Connexion</servlet-name>
        <url-pattern>/connexion</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Disconnect</servlet-name>
        <servlet-class>com.octest.servlets.DeleteDevice</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Disconnect</servlet-name>
        <url-pattern>/disconnect</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
